{
  "family": "docker-strapi-family",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::301782007642:role/docker-strapi-ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::301782007642:role/ecsTaskRole-strapi",
  "containerDefinitions": [
    {
      "name": "strapi-web",
      "image": "<IMAGE_URI>",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 1337,
          "protocol": "tcp"
        }
      ],
      "environment": [
        { "name": "HOST", "value": "0.0.0.0" },
        { "name": "PORT", "value": "1337" },

        { "name": "DATABASE_CLIENT", "value": "mysql" },
        { "name": "DATABASE_HOST", "value": "YOUR_RDS_ENDPOINT" },
        { "name": "DATABASE_PORT", "value": "3306" },
        { "name": "DATABASE_NAME", "value": "strapi" },
        { "name": "DATABASE_USERNAME", "value": "strapi" },
        { "name": "DATABASE_PASSWORD", "value": "REPLACE_ME" },

        { "name": "DATABASE_SSL", "value": "false" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/docker-strapi-con",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
